<h1>Searching for - <%= @search_term %></h1>

<% if @recipes.nil? %>

<p>No recipes found with relevant information... Sorry</p>

<%else%>

<table>
	<tr>
		<th>Image</th>
		<th>Title</th>
		<td>Rank</td>
	</tr>
	<% @recipes.each do |recipe| %>
		<tr class=<%= cycle('even', 'odd')%> >
			<td><%= link_to(image_tag(recipe['image_url']), recipe['source_url'], nil) %></td>
			<td><%= sanitize(link_to(recipe['title'], recipe['source_url'], nil)) %></td>
			<td><%= recipe['social_rank'] %></td>
		</tr>
	<% end %>
</table>

<% end -%>
